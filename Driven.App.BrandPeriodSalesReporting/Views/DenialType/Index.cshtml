@using Driven.App.BrandPeriodSalesReporting.Models
@using Driven.App.BrandPeriodSalesReporting.Helpers

@model DenialTypeListViewModel

@{
    ViewBag.Title = "Franchise Invoice Reporting Module";
}

<style>
    .form-inline {
        padding-top: 20px;
        padding-bottom: 10px !important;
    }
</style>

@Html.Partial("_AntiForgeryPartial", "__AjaxAntiForgeryForm")

<div>
    <div id="DenialTypesTableSpinner">
        <br />
        <img src="@Url.Content("~/Content/Images/dots.gif")">
    </div>

    <div>
        <div id="DenialTypesTableContainer" style="display:none">

            <div class="form-inline pull-right">
                <button id="CreateDenialTypeBtn" role="button" class="btn btn-primary">Add Denial Type</button>
            </div>

            <table id="DenialTypesTable" style="width:100%" class="table table-striped table-bordered table-condensed table-hover">
                <thead class="bg-info">
                    <tr>
                        <th style="text-align: center">Denial Type Id</th>
                        <th style="text-align: center">Denial Type Code</th>
                        <th style="text-align: center">Denial Type Description</th>
                        <th style="text-align: center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>

<div class="modal fade" id="DenialTypeModal" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div id="DenialTypePartialView"></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/drivenappbrandperiodsalesreporting")
    @Scripts.Render("~/bundles/drivenappbrandperiodsalesreportingdenialtype")
}
