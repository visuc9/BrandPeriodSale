@model Driven.App.BrandPeriodSalesReporting.Models.LoginViewModel

@{
    ViewBag.Title = "Franchise Invoice Reporting Module";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>

    <script type="text/javascript">

        $(function () {
            $('.item').each(function (idx, el) {
                setTimeout(function () {
                    $(el).addClass('active');
                    var img = $(el).children('IMG').first();
                    img.css('margin-top', ($(el).parent().height() / 2) - (img.height() / 2));
                    if (idx)
                        $(el).removeClass('active');
                }, 50);
            });

            setInterval(function () {
                $('.form-control').each(function (idx, el) {
                    var editBox = $(el);
                    if (editBox.hasClass('input-validation-error')) {
                        editBox.attr('title', $(el).attr('data-val-required'));
                        editBox.parent().addClass('has-error');
                        editBox.next().addClass('glyphicon-remove');
                    }
                    else {
                        editBox.attr('title', '');
                        editBox.parent().removeClass('has-error');
                        editBox.next().removeClass('glyphicon-remove');
                    }
                });
            }, 250);
        });

    </script>

    <style>
        body {
            padding-top: 70px;
        }
        .carousel-caption {
            position: relative;
            left: 0px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img alt="Brand" src="@Url.Content("~/Content/Images/FIRM_LOGO.png")" height="25">
                </a>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse">
                <p class="navbar-text navbar-left" style="float: none; color: #F2BD3B;">@ViewBag.Title</p>
                <section id="loginForm">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "navbar-form navbar-right form-inline", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group has-feedback">
                            @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                            <span class="glyphicon form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            <span class="glyphicon form-control-feedback"></span>
                        </div>
                        <div class="form-group">
                            @Html.Hidden("ReturnUrl", Request.Params["returnurl"])
                            <input type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    }
                </section>
            </div>
        </div>
    </nav>
    
    <div class="container body-content">

        @Html.Partial("_ValidationSummary")

        <div id="logo-carousel" class="carousel slide" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="height: 350px;" role="listbox">
                <div class="item active">
                    <img src="@Url.Content("~/Content/Images/logo-maaco.png")" alt="Maaco" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>Maaco</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/Images/logo-meineke.png")" alt="Meineke" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>Meineke</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/Images/logo-merlin.png")" alt="Merlin" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>Merlin</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/Images/logo-drivenstyle.png")" alt="Drive N Style" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>Drive N Style</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/Images/logo-econolube.png")" alt="Econo Lube" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>Econo Lube</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/Images/logo-prooilchange.png")" alt="Pro Oil Change" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>Pro Oil Change</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/Images/logo-take5oil.png")" alt="Take 5 Oil Change" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>Take 5 Oil Change</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/Images/logo-1800radiator.png")" alt="1-800-Radiator & A/C" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>1-800-Radiator & A/C</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/Images/logo-carstar.png")" alt="CarStar" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>CarStar</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="@Url.Content("~/Content/Images/logo-driven-florida-lubes.png")" alt="Driven Florida Lubes" class="img-responsive center-block">
                    <div class="carousel-caption text-center">
                        <h3>Driven Florida Lubes</h3>
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#logo-carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#logo-carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <hr />

        <footer>
            <p class="pull-left">&copy; @DateTime.Now.Year - Driven Brands, Inc. | All Rights Reserved</p>
            <img class="pull-right" src="@Url.Content("~/Content/Images/DRIVEN_TECH_LOGO_PNG.png")" alt="Driven Tech" height="25">
        </footer>
    </div>

</body>

</html>